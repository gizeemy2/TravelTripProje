@using TravelTripProje.Models.Classes
@model List<Comments>
@{
    ViewBag.Title = "CommentList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>CommentList</h2>


<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Kullanıcı</th>
        <th>Mail</th>
        <th>Yorum</th>
        <th>Blog</th>

    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.Id</td>
            <td>@x.UserName</td>
            <td>@x.Mail</td>
            <td>@x.Comment</td>
            <td>@x.Blog.Title</td>
            <td><a href="/Admin/DeleteComment/@x.Id" class="btn btn-danger">Sil</a></td>
            <td><a href="/Admin/CommentGet/@x.Id" class="btn btn-warning">Güncelle</a></td>

        </tr>

    }

</table>